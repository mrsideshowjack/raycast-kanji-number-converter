{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "japanese-number-converter",
  "title": "Japanese Number Converter",
  "description": "Converts Japanese Kanji numeral <=> number.",
  "icon": "extension_icon.png",
  "author": "jack-mason",
  "categories": [
    "Data",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Japanese Number Converter",
      "description": "Convert any Japanese Kanji numerals into numbers",
      "mode": "view",
      "icon": "extension_icon.png",
      "arguments": [
        {
          "name": "jpNumber",
          "placeholder": "430ä¸‡",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@geolonia/japanese-numeral": "^1.0.2",
    "@raycast/api": "^1.73.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
